<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/incident_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Incident Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/incident_severity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/rounded_background"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/incident_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incident description"
            android:textSize="14sp"
            android:textColor="@color/medium_gray"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/incident_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:textSize="12sp"
                android:textColor="@color/info_blue"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="4dp" />

            <TextView
                android:id="@+id/incident_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textSize="12sp"
                android:textColor="@color/medium_gray" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
